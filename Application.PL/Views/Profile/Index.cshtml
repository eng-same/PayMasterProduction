@model ProfileVM
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@(string.IsNullOrEmpty(Model.ProfilePic) ? "https://placehold.co/160x160" : Model.ProfilePic)"
                 class="rounded-circle img-fluid mb-3" alt="Profile picture" width="160" height="160" />
            <h4>@Model.FullName</h4>
            <p class="text-muted">@Model.Email</p>
            <p>
                <a asp-action="Edit" class="btn btn-outline-primary btn-sm">Edit profile</a>
            </p>
        </div>

        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Full name</dt>
                <dd class="col-sm-8">@Model.FullName</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Username</dt>
                <dd class="col-sm-8">@Model.UserName</dd>

                <dt class="col-sm-4">Phone</dt>
                <dd class="col-sm-8">@Model.PhoneNumber ?? "<span class=\"text-muted\">Not set</span>"</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">@((Model.IsActive) ? "Active" : "Inactive")</dd>

                @if (Model.EmployeeId.HasValue)
                {
                    <dt class="col-sm-4">Employee</dt>
                    <dd class="col-sm-8">@($"{Model.EmployeePosition ?? "Employee"} — Id: {Model.EmployeeId}")</dd>
                }
            </dl>
        </div>
    </div>
</div>
