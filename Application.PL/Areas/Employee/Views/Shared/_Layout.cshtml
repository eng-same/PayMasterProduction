<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PayMasterMVP</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/Visitor.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/Site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar-custom">
            <div class="brand">PayMaster</div>

            <!-- use the same class name your CSS expects -->
            <ul class="nav-links navbar-nav">
                <partial name="_LoginStatus" />
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        &copy; 2025 - PayMasterMVP - <a href="#" class="privacy-link">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>