@* Views/Shared/_AttendanceCalendar.cshtml *@
<div class="card widget-card">
    <div class="card-header widget-header">
        <h6 class="mb-0">Attendance Calendar</h6>
        <small class="text-muted">Click a date to view details</small>
    </div>
    <div class="card-body">
        <div id="attendance-calendar" class="calendar-placeholder">
            <div class="calendar-legend mb-3">
                <span class="dot present"></span> Present
                <span class="dot absent ms-3"></span> Absent
                <span class="dot leave ms-3"></span> Leave
            </div>
            <div class="calendar-grid">
                <div class="cal-row">
                    <div class="cal-day">1</div>
                    <div class="cal-day present">2</div>
                    <div class="cal-day present">3</div>
                    <div class="cal-day absent">4</div>
                    <div class="cal-day present">5</div>
                    <div class="cal-day leave">6</div>
                    <div class="cal-day present">7</div>
                </div>
                <p class="small text-muted mt-3">Replace with FullCalendar or a view component for dynamic events.</p>
            </div>
        </div>
    </div>
</div>
