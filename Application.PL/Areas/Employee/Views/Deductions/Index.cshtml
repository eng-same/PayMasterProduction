@model List<Application.DAL.Models.PayrollDeduction>
@{
    ViewData["Title"] = "Deductions";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Deductions</h3>
        <a asp-action="Index" asp-controller="Home" asp-area="Employee" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    <div class="card"><div class="card-body">
        <table class="table table-sm">
            <thead><tr><th>Date</th><th>Reason</th><th>Minutes</th><th>Amount</th><th></th></tr></thead>
            <tbody>
                @foreach(var d in Model)
                {
                    <tr>
                        <td>@d.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>@d.Reason</td>
                        <td>@d.MinutesDeducted</td>
                        <td>@d.Amount.ToString("C")</td>
                        <td><a asp-action="DownloadPdf" asp-route-id="@d.Id" class="btn btn-sm btn-outline-primary">Download PDF</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div></div>
</div>