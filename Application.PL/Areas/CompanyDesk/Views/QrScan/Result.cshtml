@model QrResultVm
@{
    ViewData["Title"] = Model.Success ? "Success" : "Error";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@ViewData["Title"]</h3>
            <p>@Model.Message</p>

            @if (Model.Success)
            {
                <ul>
                    <li>EmployeeId: @Model.EmployeeId</li>
                    <li>CompanyId: @Model.CompanyId</li>
                    <li>AttendanceId: @Model.AttendanceId</li>
                    <li>Action: @(Model.IsCheckout ? "Check-out" : "Check-in")</li>
                </ul>
            }
            else
            {
                <p class="text-danger">@Model.Message</p>
            }

            <a class="btn btn-primary" href="javascript:window.close()">Close</a>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Home", new { area = "" })">Home</a>
        </div>
    </div>
</div>
