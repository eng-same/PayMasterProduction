@* Views/Shared/_SupervisorLayout.cshtml *@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PayMaster Supervisor</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Supervisor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container-fluid nav-inner d-flex align-items-center">
                <div class="d-flex align-items-center">
                    <!-- Sidebar toggle -->
                    <button id="sidebarToggle" class="btn btn-ghost me-2" aria-expanded="true" aria-controls="supervisorSidebar" title="Toggle menu">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="brand">PayMaster</div>
                </div>

                <div class="nav-actions d-flex align-items-center">
                    <div class="me-3 d-none d-md-block">
                        <span class="small text-muted">Supervisor Portal</span>
                    </div>
                    <partial name="_LoginStatus" />
                </div>
            </div>
        </nav>
    </header>

    <div class="shell">
        <div class="supervisor-shell d-flex">
            <!-- Sidebar -->
            <aside id="supervisorSidebar" class="sidebar" role="navigation" aria-label="Supervisor menu">
                <partial name="_SupervisorSidebar" />
            </aside>
@* 
            <!-- Main content -->
            <main class="content flex-grow-1">
