                        </div>
                        <div class="col-md-6">
                            <partial name="_EmployeeManagement" />
                        </div>
                        <div class="col-md-6">
                            <partial name="_AttendanceSummary" />
                        </div>
                        <div class="col-12">
                            <partial name="_Reports" />
                        </div>
                    </div>
                </div>
            </main> *@
    <main>
        @RenderBody()
    </main>
        </div>

    </div>

    <footer class="footer">
        <div class="container-fluid text-center text-muted small py-3">
            &copy; 2025 - PayMasterMVP
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/supervisor-layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
