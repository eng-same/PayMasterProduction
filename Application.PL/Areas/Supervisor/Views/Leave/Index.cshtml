@model IEnumerable<Application.DAL.Models.LeaveRequest>
@{
    ViewData["Title"] = "Leave Requests";
}

<h2>Leave Requests</h2>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Type</th>
            <th>Period</th>
            <th>Reason</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@(r.Employee != null ? r.Employee.FirstName + " " + r.Employee.LastName : "-" )</td>
                <td>@r.LeaveType</td>
                <td>@r.StartDate.ToString("yyyy-MM-dd") - @r.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@r.Reason</td>
                <td>@r.Status</td>
                <td>
                    @if (r.Status == "Pending")
                    {
                        <form asp-action="Approve" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button class="btn btn-sm btn-success">Approve</button>
                        </form>
                        <form asp-action="Reject" method="post" class="d-inline ms-1">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button class="btn btn-sm btn-danger">Reject</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
