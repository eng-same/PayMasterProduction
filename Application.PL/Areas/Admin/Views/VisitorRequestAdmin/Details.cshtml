@model Application.DAL.Models.VisitorRequest
@{
    ViewData["Title"] = "Visitor Request Details";
}
<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Submitted</dt>
        <dd class="col-sm-10">@Model.SubmittedAt.ToLocalTime()</dd>

        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">@Model.CompanyName</dd>

        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.ContactName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Employees</dt>
        <dd class="col-sm-10">@Model.NumberOfEmployees</dd>

        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.Message</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Reviewed</dt>
        <dd class="col-sm-10">@Model.ReviewedAt?.ToLocalTime()</dd>
    </dl>

    <a class="btn btn-secondary" href="@Url.Action("Index")">Back</a>
    @if (Model.Status == "Pending")
    {
        <form method="post" asp-action="Approve" asp-route-id="@Model.Id" style="display:inline">
            @Html.AntiForgeryToken()
            <button class="btn btn-success">Approve</button>
        </form>
        <form method="post" asp-action="Reject" asp-route-id="@Model.Id" style="display:inline; margin-left:6px">
            @Html.AntiForgeryToken()
            <button class="btn btn-danger">Reject</button>
        </form>
    }
</div>