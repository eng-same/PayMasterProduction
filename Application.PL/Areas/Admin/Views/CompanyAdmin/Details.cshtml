@model CompanyDetailsVM
@{
    ViewData["Title"] = "Company Details";
}

<h1>Company Details</h1>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    <a asp-action="Edit" asp-route-id="@Model.CompanyId" class="btn btn-secondary">Edit</a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <p class="mb-1"><strong>Timezone:</strong> @Model.Timezone</p>
        <p class="mb-1"><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
        <p class="mb-1"><strong>Address:</strong> @Model.Address</p>
        <p class="mb-1"><strong>Employees (active):</strong> @Model.ActiveEmployeeCount</p>
        <p class="mb-1"><strong>Billing rate per employee:</strong> @(Model.BillingRatePerEmployee.HasValue? Model.BillingRatePerEmployee.Value.ToString("C") : "—")</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h4>Latest QR</h4>
        @if (Model.LatestQrId.HasValue)
        {
            <div class="card p-3 mb-3">
                <p><strong>Token:</strong> @Model.LatestQrToken</p>
                <p><strong>Generated at:</strong> @Model.LatestQrGeneratedAt?.ToString("yyyy-MM-dd HH:mm:ss")</p>
                <p><strong>Expires:</strong> @Model.LatestQrExpiryDate?.ToString("yyyy-MM-dd HH:mm:ss")</p>

                @if (!string.IsNullOrEmpty(Model.LatestQrImageUrl))
                {
                    <div class="mt-3">
                        <img src="@Model.LatestQrImageUrl" alt="Company QR" style="max-width:260px; height:auto; border:1px solid #ddd; padding:8px;" />
                    </div>
                    <div class="mt-2">
                        <a class="btn btn-sm btn-outline-primary" href="@Model.LatestQrImageUrl" target="_blank">Open PNG</a>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No QR codes found for this company.</p>
        }
    </div>

    <div class="col-md-6">
        <h4>Supervisors</h4>
        @if (Model.Supervisors?.Any() == true)
        {
            <ul class="list-group mb-3">
                @foreach (var s in Model.Supervisors)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <div>@s.FullName</div>
                            <small class="text-muted">@s.Email</small>
                        </div>
                        <div>
                            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", "User", new { id = s.UserId })">View User</a>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No supervisors assigned.</p>
        }

        <h4>Recent Invoices</h4>
        @if (Model.RecentInvoices != null && Model.RecentInvoices.Any())
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Employees</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Paid</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var inv in Model.RecentInvoices)
                    {
                        <tr>
                            <td>@inv.Date.ToString("yyyy-MM-dd")</td>
                            <td>@inv.ActiveEmployeeCount</td>
                            <td>@inv.RatePerEmployee.ToString("C")</td>
                            <td>@inv.TotalAmount.ToString("C")</td>
                            <td>@(inv.IsPaid ? "Yes" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No invoices found.</p>
        }
    </div>
</div>